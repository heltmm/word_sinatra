<% @dictionary.each do |word| %>
  <h1><%= word.name %></h1>
  <% if word.definitions == [] %>
    <h4>No Definition added yet</h4>
  <% end %>
  <% word.definitions.each do |definition| %>
    <h4>Definition <%=word.definitions.index(definition) + 1%>: <%= definition %></h4>
    <% end %>
    <br>
<% end %>


