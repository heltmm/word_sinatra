<h1><%= @word.name %></h1>
<% if @word.link != ''%>
  <img src="<%=@word.link%>" alt='image did not load'>
<% end %>
<% @word.definitions.each do |definition| %>
  <h2>Definition <%=@word.definitions.index(definition) + 1%>: <%= definition %></h2>
<% end %>

<form action="/<%=@word.name %>" method="post">
  <label for="definition">Type in your definition here</label>
  <input type="text" name="definition">
  <button type="submit">Add Definition!</button>
</form>

<form action="/image/<%=@word.name %>" method="post">
  <label for="link">Type in your link here to add an Image</label>
  <input type="text" name="link">
  <button type="submit">Add an Image!</button>
</form>
<form action="/delete/<%=@word.name %>" method="post">
  <button type="submit" name="button">Delete</button>
</form>

<br>
<a href="/">Return Home</a>
